{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": { "includeFiles": [ "Pipfile", "Pipfile.lock" ] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/verificar-licitacoes",
      "schedule": "30 11 * * 1-5"
    }
  ]
}